{% if robokassa_status_iframe %}
    <script type="text/javascript" src="https://auth.robokassa.ru/Merchant/bundle/robokassa_iframe.js"></script>
    <div class="buttons">
        <div class="pull-right">
            <input type="submit" value="{{ button_confirm }}" class="btn btn-primary"
                   onclick="Robokassa.StartPayment({MerchantLogin: '{{ robokassa_login }}',    OutSum: '{{ out_summ }}', InvId: '{{ inv_id }}', Description: '{{ order_desc }}', {% if out_summ_currency %} OutSumCurrency: '{{ out_summ_currency }}', {% endif %} {% if robokassa_fiscal %} Receipt: '{{ receipt }}', {% endif %} SignatureValue: '{{ crc }}', Shp_item: '1', Shp_label: 'official_opencart', Culture: '{{ culture }}'})">
        </div>
    </div>
{% else %}
    <form action="{{ payment_url }}" method="post">
        <input type="hidden" name="MerchantLogin" value="{{ robokassa_login }}"/>
        <input type="hidden" name="OutSum" value="{{ out_summ }}"/>
        <input type="hidden" name="InvId" value="{{ inv_id }}"/>
        <input type="hidden" name="Description" value="{{ order_desc }}"/>

        {% if out_summ_currency %}
            <input type="hidden" name="OutSumCurrency" value="{{ out_summ_currency }}"/>
        {% endif %}
        {% if robokassa_fiscal %}
            <input type="hidden" name="Receipt" value="{{ receipt }}"/>
        {% endif %}
        <input type="hidden" name="SignatureValue" value="{{ crc }}"/>
        <input type="hidden" name="Shp_item" value="1"/>
        <input type="hidden" name="Shp_label" value="official_opencart"/>

        {% if robokassa_test %}
            <input type="hidden" name="IsTest" value="1"/>
        {% endif %}
        <input type="hidden" name="IncCurrLabel" value=""/>
        <input type="hidden" name="Culture" value="{{ culture }}"/>
        <div class="buttons">
            <div class="pull-right">
                <input type="submit" value="{{ button_confirm }}" class="btn btn-primary"/>
            </div>
        </div>
    </form>
{% endif %}